{
  "extends": ["eslint-config-airbnb"],
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "prefer-const": "off",
    "no-param-reassign": "off",
    "react/jsx-boolean-value": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/prop-types": [2, { "ignore": [
        "children",
        "className",
        "style",
        "bsStyle",
        "bsClass",
        "bsSize"
      ]
    }],
    "import/no-extraneous-dependencies": [
      "error", {"devDependencies": ["!src/**/*.js"] }
    ]
  }
}

{
  "compilerOptions": {
    "outDir": "lib",
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "stripInternal": true,
    "strict": true,
    "noImplicitAny": false,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
